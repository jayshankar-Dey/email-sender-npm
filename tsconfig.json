{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "commonjs",                                
    "rootDir": "src",
    "outDir": "dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "declaration": true,            
    "strict": true,                                               
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
